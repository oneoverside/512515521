<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FuelStations.Views.MainPage">

    <ContentPage.Content>
        <StackLayout x:Name="ListOfStationsContainer">
            <Button Text="View all Stations" Clicked="OnViewStations" />
            <Button Text="Add new Station" Clicked="OnAddNewStation" />
            <Button Text="Delete Station"  Clicked="OnDelete" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
